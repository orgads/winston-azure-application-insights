{
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "commonjs"
  },
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "camelcase": ["off"],
    "comma-dangle": ["error", "always-multiline"],
    "indent": ["error", 4],
    "no-mixed-operators": ["off"],
    "no-multiple-empty-lines": ["error"],
    "no-plusplus": ["off"],
    "quote-props": ["error", "consistent-as-needed"]
  },
  "extends": [
    "airbnb-base/legacy"
  ]
}
